---
import videos from "../data/videos.json"

const { title } = Astro.props
---

<section id="videos" class="bs-container bs-mt-lg">
  <!-- Header -->
  <header class="text-center mb-12">
    <h2 class="bs-h2">{ title }</h2>
  </header>

  <!-- Videos Grid -->
  <div class="grid md:grid-cols-2 gap-8">

    {videos.map(video =>

      <article class="bg-bs-surface-0 border border-bs-surface-3 rounded-xl overflow-hidden">
        <div class="aspect-video">
          <iframe
            width="100%"
            height="100%"
            src={video.video_url}
            title={`${video.title} - ${video.description.substring(0, 50)}...`}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy">
          </iframe>
        </div>
        <div class="p-6">
          <h3 class="bs-h3 text-bs-foreground-dark mb-2">{video.title}</h3>
          <p class="bs-body-text text-sm mb-4">
            {video.description}
          </p>
          {video.link_url && (
            <a href={video.link_url} target="_blank" rel="noopener" class="bs-btn text-sm">{video.link_text}</a>
          )}
        </div>
      </article>

    )}

  </div>
</section>
