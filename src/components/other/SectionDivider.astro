---
// Optional ornamental divider between major sections to create "walking through rooms" feeling
const { variant = "default" } = Astro.props
---

{variant === "default" && (
  <div class="bs-container bs-mt-lg flex items-center justify-center opacity-30">
    <div class="h-px bg-gradient-to-r from-transparent via-bs-foreground-dark to-transparent w-full max-w-md"></div>
  </div>
)}

{variant === "ornamental" && (
  <div class="bs-container bs-mt-lg flex items-center justify-center">
    <svg class="w-12 h-12 text-bs-foreground-dark opacity-20" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12,2A2,2 0 0,1 14,4C14,4.74 13.6,5.39 13,5.73V7H14A7,7 0 0,1 21,14H22A1,1 0 0,1 23,15V18A1,1 0 0,1 22,19H21V20A2,2 0 0,1 19,22H5A2,2 0 0,1 3,20V19H2A1,1 0 0,1 1,18V15A1,1 0 0,1 2,14H3A7,7 0 0,1 10,7H11V5.73C10.4,5.39 10,4.74 10,4A2,2 0 0,1 12,2M7.5,13A0.5,0.5 0 0,0 7,13.5A0.5,0.5 0 0,0 7.5,14A0.5,0.5 0 0,0 8,13.5A0.5,0.5 0 0,0 7.5,13M16.5,13A0.5,0.5 0 0,0 16,13.5A0.5,0.5 0 0,0 16.5,14A0.5,0.5 0 0,0 17,13.5A0.5,0.5 0 0,0 16.5,13Z" />
    </svg>
  </div>
)}

{variant === "spacer" && (
  <div class="bs-mt-lg" aria-hidden="true"></div>
)}

