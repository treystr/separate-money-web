---
// Section 10: Final Call to Action
// "OPT OUT" - Leading to resources on how to start saving in Bitcoin

import Image from "astro/components/Image.astro"
import wallpaper05 from "../../assets/wallpapers/wallpaper-05.jpg"

const title = "Opt into Bitcoin"
const content = "Separating money from the state starts with trading fiat for Bitcoin. Choose from the best platforms to make your first purchase, learn about self-custody when you're ready, and begin building generational wealth outside the system."
const cta_text = "Buy Bitcoin"
const cta_link = "https://www.bitcoinproducts.com/buy-bitcoin"
---

<!-- Section Content - Slot content for SectionWrapper -->
<div class="section-content">
  <Image
    src={wallpaper05}
    alt=""
    loading="lazy"
    class="wallpaper-bg"
    width={1920}
    height={1080}
    format="avif"
  />
  <div class="overlay"></div>
  <div class="flex flex-col h-full py-8 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col justify-center flex-1 min-h-0 max-w-6xl mx-auto w-full">
      <div class="max-w-3xl mx-auto text-center relative z-10">
        <h2 class="bs-h2 mb-6 text-white">{ title }</h2>
        <p class="bs-body-text text-pretty mb-8 text-lg text-white">
          { content }
        </p>
        <div class="flex justify-center">
          <a href={ cta_link } class="cta-button">
            { cta_text }
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Section-specific styles */
  :global(.section-wrapper:has(#section-10)) {
    position: relative;
    overflow: hidden;
  }

  .section-content {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .wallpaper-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }

  .section-content > :last-child {
    position: relative;
    z-index: 2;
  }

  .cta-button {
    background-color: var(--color-bitcoin);
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    padding: 1.25rem 3rem;
    border-radius: 0.5rem;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
  }

  .cta-button:hover {
    background-color: var(--color-bitcoin-dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
  }

  .cta-button:active {
    transform: translateY(0);
  }

  @media (max-width: 640px) {
    .cta-button {
      font-size: 1.25rem;
      padding: 1rem 2rem;
    }
  }
</style>
