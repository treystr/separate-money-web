---
// Section 08: Inflation: The Hidden Tax You Never Voted For
// Arc II: The Theft

import ImageBackground from "../ui/ImageBackground.astro"
import dollars100Image from "../../assets/wallpapers/dollars100.jpg"

const title = "Inflation: The Hidden Tax You Never Voted For"
const content = "Every new dollar printed reduces the value of the ones you already earned. It's a transfer of wealth from savers and workers to those closest to the money printer."
const resourceLink = ""
const resourceText = "Learn More"
---

<!-- Background Image -->
<ImageBackground 
  src={dollars100Image} 
  opacity={0.3}
  alt=""
/>

<!-- Section Content - Slot content for SectionWrapper -->
<div class="flex flex-col justify-center items-center h-full py-8 px-4 sm:px-6 lg:px-8 relative z-10">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="bs-h2 mb-6">{ title }</h2>
    <p class="bs-body-text text-xl text-bs-foreground-dark mb-6">{ content }</p>
    {resourceLink && (
      <a href={resourceLink} target="_blank" rel="noopener" class="bs-btn">
        { resourceText }
      </a>
    )}
  </div>
</div>

<style>
  /* Section-specific styles */
  :global(.section-wrapper:has(#section-08)) {
    background: linear-gradient(135deg, var(--color-cypherpunk-darker) 0%, var(--color-cypherpunk-dark) 100%);
  }
</style>

