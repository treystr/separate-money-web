---
// Example: How to add MarkdownModal to a section component
// This shows how to integrate the modal into YoureNotCrazy.astro

import VideoBackground from "../ui/VideoBackground.astro";
import MarkdownModal from "../ui/MarkdownModal.astro";

const title = "You're Not Crazy â€” Life Is Getting Harder"
const content = "You work longer hours than your parents did, yet housing, education, healthcare, and even groceries feel further out of reach. You're not imagining it, and you're not alone. Something fundamental has changed."
---

<!-- Video Background -->
<VideoBackground
  mp4Src="/videos/home_inflation.mp4"
  opacity={0.4}
/>

<!-- Section Content - Slot content for SectionWrapper -->
<div class="flex flex-col justify-center items-center h-full py-8 px-4 sm:px-6 lg:px-8 relative z-10">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="bs-h2 mb-6">{ title }</h2>
    <p class="bs-body-text text-xl text-bs-foreground-dark mb-6">{ content }</p>
    
    <!-- Add a "Read More" button that opens the modal -->
    <button 
      onclick="document.getElementById('section-01-modal').showModal()"
      class="bs-btn"
    >
      Read More
    </button>
  </div>
</div>

<!-- Include the modal component -->
<MarkdownModal 
  id="section-01-modal"
  title={title}
  markdownFile="section-01.md"
/>

<style>
  /* Section-specific styles */
  :global(.section-wrapper:has(#section-01)) {
    background: linear-gradient(135deg, var(--color-cypherpunk-dark) 0%, var(--color-cypherpunk-gray) 100%);
  }
</style>

