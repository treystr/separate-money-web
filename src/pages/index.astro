---

import Layout from "../layouts/Layout.astro"
import SectionWrapper from "../components/SectionWrapper.astro"

// Import all section components
import HeroEntry from "../components/sections/HeroEntry.astro"
import InheritanceCost from "../components/sections/InheritanceCost.astro"
import SilentTheft from "../components/sections/SilentTheft.astro"
import ProblemWhy from "../components/sections/ProblemWhy.astro"
import GenerationalInheritance from "../components/sections/GenerationalInheritance.astro"
import HayekQuote from "../components/sections/HayekQuote.astro"
import PrivacyFreedom from "../components/sections/PrivacyFreedom.astro"
import FaqSection from "../components/sections/FaqSection.astro"
import SpreadWord from "../components/sections/SpreadWord.astro"
import FinalCta from "../components/sections/FinalCta.astro"
import FooterMain from "../components/FooterMain.astro"

import global_settings from "../data/global_settings.json"

---

<Layout title={ global_settings.title }>

  <!-- Hero Entry: The HERO Entry -->
  <SectionWrapper transitionType="fade" sectionId="section-01">
    <HeroEntry />
  </SectionWrapper>

  <!-- Inheritance Cost: The Cost of Our Inheritance -->
  <SectionWrapper transitionType="slide-up" sectionId="section-02">
    <InheritanceCost />
  </SectionWrapper>

  <!-- Silent Theft: The Silent Theft -->
  <SectionWrapper transitionType="glitch" sectionId="section-03">
    <SilentTheft />
  </SectionWrapper>

  <!-- Problem Why: What's the Problem & Why -->
  <SectionWrapper transitionType="fade" sectionId="section-04">
    <ProblemWhy />
  </SectionWrapper>

  <!-- Generational Inheritance: A Generation's Inheritance -->
  <SectionWrapper transitionType="slide-up" sectionId="section-05">
    <GenerationalInheritance />
  </SectionWrapper>

  <!-- Hayek Quote: A Sly, Roundabout Way -->
  <SectionWrapper transitionType="zoom-in" sectionId="section-06">
    <HayekQuote />
  </SectionWrapper>

  <!-- Privacy Freedom: Privacy is Necessary for Freedom -->
  <SectionWrapper transitionType="fade" sectionId="section-07">
    <PrivacyFreedom />
  </SectionWrapper>

  <!-- FAQ Section: FAQ -->
  <SectionWrapper transitionType="slide-up" sectionId="section-08">
    <FaqSection />
  </SectionWrapper>

  <!-- Spread Word: Spread the Word -->
  <SectionWrapper transitionType="fade" sectionId="section-09">
    <SpreadWord />
  </SectionWrapper>

  <!-- Final CTA: Final Call to Action -->
  <SectionWrapper transitionType="zoom-in" sectionId="section-10">
    <FinalCta />
  </SectionWrapper>

  <!-- Footer Section -->
  <SectionWrapper transitionType="fade" sectionId="section-11">
    <div class="flex flex-col h-full px-4 sm:px-6 lg:px-8">
      <!-- Spacer for future content (image, etc.) -->
      <div class="flex-1"></div>
      
      <!-- Footer content positioned at bottom -->
      <div class="flex-shrink-0 py-8">
        <FooterMain />
      </div>
    </div>
  </SectionWrapper>

<style>
  /* Override footer top margin when in section context */
  #section-11 footer {
    margin-top: 0;
  }
</style>

</Layout>
